{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en",
  "ignorePaths": ["node_modules", ".git"],
  "dictionaryDefinitions": [{ "name": "custom", "path": "./cspell-dict.txt" }],
  "dictionaries": ["custom"],
  "numSuggestions": 3,
  "diagnosticLevel": "Hint",
  "languageSettings": [
    {
      "languageId": ["*"],
      "includeRegExpList": ["CStyleComment", "PythonComment", "LuaComment", "Logger"],
      "ignoreRegExpList": ["/#include.*/", "import\\s*\\((.|[\r\n])*?\\)", "/import.*/", "/.*require\\(.*\\)/"]
    },
    {
      "languageId": ["markdown", "plaintext", "text", "gitcommit"],
      "includeRegExpList": ["Everything"],
      "ignoreRegExpList": ["String"]
    },
    {
      "languageId": ["yaml.ansible"],
      "ignoreRegExpList": ["String"]
    },
    {
      "languageId": ["cpp,c"],
      "allowCompoundWords": false,
      "ignoreRegExpList": []
    }
  ],
  "patterns": [
    {
      "name": "ignore_string_literal_prefix",
      "pattern": "/\\b(?:rf|fr|f|r|u|ur|b|br)'/gi"
    },
    {
      "name": "LuaComment",
      "description": "Matches all comments in a Lua file.",
      "pattern": ["/--.*|(?:('''|\"\"\")[^\\1]+?\\1)/gm"]
    },
    {
      "name": "PythonComment",
      "description": "Matches all comments in a Python file.",
      "pattern": ["/#.*|(?:('''|\"\"\")[^\\1]+?\\1)/gm"]
    },
    {
      "name": "Logger",
      "description": "Matches all logger patterns.",
      "pattern": ["/(log|Log).*|(?:('''|\"\"\"|```)[^\\2]+?\\2)/gm"]
    }
  ]
}
