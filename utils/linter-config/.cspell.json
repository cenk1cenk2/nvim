{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en",
  "ignorePaths": ["node_modules", ".git"],
  "dictionaryDefinitions": [{ "name": "custom", "path": "./cspell-dict.txt" }],
  "dictionaries": ["custom"],
  "languageSettings": [
    {
      "languageId": ["markdown", "plaintext", "text", "gitcommit"],
      "includeRegExpList": ["Everything"],
      "ignoreRegExpList": ["string"]
    },
    {
      "languageId": ["yaml.ansible"],
      "allowCompoundWords": false,
      "ignoreRegExpList": ["string"]
    },
    {
      "languageId": ["cpp,c"],
      "allowCompoundWords": false,
      "ignoreRegExpList": ["/#include.*/"]
    },
    {
      "languageId": ["*"],
      "includeRegExpList": ["CStyleComment", "strings"],
      "ignoreRegExpList": ["import\\s*\\((.|[\r\n])*?\\)", "/import.*/", "/require.*/"]
    }
  ],
  "patterns": [
    {
      "name": "ignore_string_literal_prefix",
      "pattern": "/\\b(?:rf|fr|f|r|u|ur|b|br)'/gi"
    },
    {
      "name": "string_binary",
      "pattern": "/\\bbr?(['\"]).*?\\1/gi"
    },
    {
      "name": "string_raw",
      "pattern": "/\\bu?r(['\"]).*?\\1/gi"
    },
    {
      "name": "string-multi-line",
      "pattern": "/(\"\"\"|''')[^\\1]*?\\1/g"
    },
    {
      "name": "string-single-line",
      "pattern": "/((?<!\\\\)(?:'|\"))(?!\\1).*?(?<!\\1)(?<!\\\\)\\1(?!\\1)/g"
    },
    {
      "name": "strings",
      "description": "Matches all strings in a Python File.",
      "pattern": ["/((?<!\\\\)(?:'|\"))(?!\\1).*?(?<!\\1)(?<!\\\\)\\1(?!\\1)/g", "/(\"\"\"|''')[^\\1]*?\\1/g"]
    },
    {
      "name": "comment-single-line",
      "pattern": "/#.*/g"
    },
    {
      "name": "comment-multi-line",
      "pattern": "/(\"\"\"|''')[^\\1]*?\\1/g"
    },
    {
      "name": "comments",
      "description": "Matches all comments in a Python File.",
      "pattern": ["/#.*/g", "/(\"\"\"|''')[^\\1]*?\\1/g"]
    }
  ]
}
